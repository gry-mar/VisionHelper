<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".zoomview.ZoomViewActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnHelperZoomView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:paddingLeft="16sp"
            android:paddingRight="80dp"
            android:src="@drawable/ic_helper"
            android:background="@color/transparent"
            />

        <ImageButton
            android:id="@+id/btnBackFromZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:paddingRight="16sp"
            android:paddingLeft="80dp"
            android:src="@drawable/ic_arrow"
            android:background="@color/transparent"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvTextZoomView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight='0.2'
        android:layout_gravity="center"
        android:text="@string/lorem_ipsum_text"
        android:ems="15"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btnZoomTextOut"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_remove"
            android:background="@color/transparent"
            />
        <Space
            android:layout_width="72sp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/btnZoomTextIn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_add"
            android:background="@color/transparent"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnConfirmTextSizeZoomView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_check"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:background="@color/transparent"
        />

</LinearLayout>